<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivTeacherPhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvTeacherName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivTeacherPhoto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Nombre del Profesor" />

    <TextView
        android:id="@+id/tvTeacherEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivTeacherPhoto"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherName"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        android:text="Email del Profesor"  />

    <TextView
        android:id="@+id/tvTeacherPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivTeacherPhoto"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherEmail"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        android:text="TelÃ©fono del Profesor" />
</androidx.constraintlayout.widget.ConstraintLayout>
